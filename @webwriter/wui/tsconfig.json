{
    "compilerOptions": {
        "target": "ES2022",
        "module": "es2020",
        "lib": ["ES2022", "DOM"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "useDefineForClassFields": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "plugins": [
            {"name": "ts-lit-plugin"}
        ]
    }
}