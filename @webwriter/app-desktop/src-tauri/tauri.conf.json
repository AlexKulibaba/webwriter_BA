{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:5173",
    "distDir": "../../core/dist"
  },
  "package": {
    "productName": "webwriter",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,

      "fs": {
        "readFile": true,
        "writeFile": true,
        "removeFile": true,
        "createDir": true,
        "readDir": true,
        "scope": ["$APP", "$APP/*", "$APP/**/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "sidecar": true,
        "execute": true,
        "open": true,
        "scope": [
          {"name": "../../../binaries/npm", "args": true, "sidecar": true},
          {"name": "../../../binaries/esbuild", "args": true, "sidecar": true}
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "../../../binaries/npm",
        "../../../binaries/esbuild"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "webwriter.webwriter",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [],
      "dialog": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "WebWriter",
        "width": 800
      }
    ]
  }
}
