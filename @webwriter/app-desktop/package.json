{
  "name": "@webwriter/app-desktop",
  "version": "0.3.4",
  "description": "Windows/Mac/Linux version of WebWriter",
  "private": true,
  "scripts": {
    "tauri": "tauri",
    "vite": "node ../../node_modules/vite/bin/vite",
    "dev-core": "npm run vite -- ../core -c ../core/vite.config.js -l error",
    "build-core": "npm run vite -- build ../core -c ../core/vite.config.js",
    "dev-tauri": "tauri dev",
    "build-tauri": "tauri build",
    "build-local": "npm run build-core && tauri build",
    "dev": "npm-run-all -pr dev-core dev-tauri",
    "make-app-icon": "tauri icon ../../static/assets/app-icon.png"
  },
  "author": "Frederic Salmen <frederic@fsalmen.de>",
  "license": "UNLICENSED",
  "dependencies": {
    "@tauri-apps/api": "^1.2.0"
  },
  "peerDependencies": {
    "@webwriter/core": "file:../core"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.2.2",
    "pkg": "^5.8.0"
  },
  "optionalDependencies": {
    "@tauri-apps/cli-darwin-arm64": "^1.2.2",
    "@tauri-apps/cli-darwin-x64": "^1.2.2",
    "@tauri-apps/cli-linux-x64-gnu": "^1.2.2",
    "@tauri-apps/cli-win32-x64-msvc": "^1.2.2",
    "esbuild-darwin-64": "^0.15.18",
    "esbuild-darwin-arm64": "^0.15.18",
    "esbuild-linux-64": "^0.15.18",
    "esbuild-linux-arm64": "^0.15.18",
    "esbuild-windows-64": "^0.15.18",
    "esbuild-windows-arm64": "^0.15.18"
  }
}
